---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} | Tealinger</title>
	</head>
	<body class="bg-white text-gray-900 leading-relaxed">
		<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:p-4 focus:bg-tealinger-base focus:text-white">
			Zum Hauptinhalt springen
		</a>
		
		<header class="border-b border-gray-200 py-4">
			<nav class="container mx-auto px-4 flex justify-between items-center" aria-label="Hauptnavigation">
				<a href="/tealinger" class="text-2xl font-bold text-tealinger-base">Tealinger</a>
				<ul class="flex gap-6">
					<li><a href="/tealinger" class="hover:underline decoration-2 underline-offset-4">Home</a></li>
					<li><a href="/tealinger/shop" class="hover:underline decoration-2 underline-offset-4">Shop</a></li>
				</ul>
			</nav>
		</header>

		<main id="main-content" class="container mx-auto px-4 py-8">
			<slot />
		</main>

		<footer class="bg-tealinger-light mt-12 py-8 border-t border-gray-200">
			<div class="container mx-auto px-4 text-center">
				<p>&copy; 2025 Tealinger - Uni Projekt TU Wien</p>
			</div>
		</footer>
	</body>
</html>