---
import Layout from '../layout/Layout.astro';
import "../styles/global.css";
// Titel der Seite
const pageTitle = "Kontakt";
---

<Layout title={pageTitle}>
    <div class="max-w-4xl mx-auto">
        
        <div class="text-center mb-12">
            <h1 class="text-4xl font-extrabold text-tealinger-dark mb-4">Kontaktieren Sie uns</h1>
            <p class="text-gray-600 text-lg">
                Haben Sie Fragen zu unseren Teesorten oder Ihrer Bestellung? <br class="hidden md:inline" />
                Wir sind gerne für Sie da.
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            
            <div class="bg-gray-50 p-8 rounded-xl h-fit border border-gray-100">
                <h2 class="text-xl font-bold mb-6 text-tealinger-dark">Unsere Daten</h2>
                
                <div class="space-y-6">
                    <div>
                        <h3 class="font-bold text-gray-900 mb-1">Anschrift</h3>
                        <p class="text-gray-600">
                            Tealinger GmbH<br>
                            Praterstraße 302<br>
                            1020 Wien, Österreich
                        </p>
                    </div>

                    <div>
                        <h3 class="font-bold text-gray-900 mb-1">E-Mail & Telefon</h3>
                        <p class="text-gray-600">
                            <a href="mailto:contact@tealinger.at" class="hover:text-tealinger-base transition-colors">contact@tealinger.at</a><br>
                            <a href="tel:+43 660 12345667" class="hover:text-tealinger-base transition-colors">+43 660 12345667</a>
                        </p>
                    </div>

                    <div>
                        <h3 class="font-bold text-gray-900 mb-1">Öffnungszeiten</h3>
                        <p class="text-gray-600">
                            Mo - Fr: 08:00 - 18:00<br>
                            Sa: 10:00 - 16:00
                        </p>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-2">
                <form id="contact-form" class="space-y-6">
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name *</label>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                required
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-tealinger-base focus:border-tealinger-base outline-none transition-all"
                                placeholder="Max Mustermann"
                            />
                        </div>

                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">E-Mail Adresse *</label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                required
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-tealinger-base focus:border-tealinger-base outline-none transition-all"
                                placeholder="max@beispiel.at"
                            />
                        </div>
                    </div>

                    <div>
                        <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Betreff</label>
                        <select 
                            id="subject" 
                            name="subject" 
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-tealinger-base focus:border-tealinger-base outline-none transition-all bg-white"
                        >
                            <option value="general">Allgemeine Anfrage</option>
                            <option value="order">Frage zu einer Bestellung</option>
                            <option value="b2b">Geschäftskunden / B2B</option>
                            <option value="other">Sonstiges</option>
                        </select>
                    </div>

                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Ihre Nachricht *</label>
                        <textarea 
                            id="message" 
                            name="message" 
                            rows="6" 
                            required
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-tealinger-base focus:border-tealinger-base outline-none transition-all resize-y"
                            placeholder="Wie können wir Ihnen helfen?"
                        ></textarea>
                    </div>

                    <div class="flex items-start">
                        <div class="flex items-center h-5">
                            <input 
                                id="privacy" 
                                name="privacy" 
                                type="checkbox" 
                                required
                                class="w-4 h-4 text-tealinger-base border-gray-300 rounded focus:ring-tealinger-base"
                            />
                        </div>
                        <div class="ml-3 text-sm">
                            <label for="privacy" class="text-gray-600">
                                Ich stimme zu, dass meine Angaben zur Kontaktaufnahme und Zuordnung für eventuelle Rückfragen dauerhaft gespeichert werden. Weitere Informationen finden Sie in der <a href="/tealinger/datenschutz" class="text-tealinger-dark hover:underline font-semibold">Datenschutzerklärung</a>.
                            </label>
                        </div>
                    </div>

                    <input type="text" name="_gotcha" style="display:none !important" tabindex="-1" autocomplete="off" />

                    <button 
                        type="submit" 
                        class="w-full md:w-auto px-8 py-3 bg-tealinger-dark text-white font-bold rounded-lg hover:bg-tealinger-base transition-colors duration-300 focus:outline-none focus:ring-4 focus:ring-green-200"
                    >
                        Nachricht senden
                    </button>

                    <div id="form-success" class="hidden p-4 rounded-lg bg-green-50 text-green-800 border border-green-200">
                        Vielen Dank! Ihre Nachricht wurde erfolgreich gesendet.
                    </div>
                    <div id="form-error" class="hidden p-4 rounded-lg bg-red-50 text-red-800 border border-red-200">
                        Es ist ein Fehler aufgetreten. Bitte versuchen Sie es später erneut.
                    </div>

                </form>
            </div>
        </div>
    </div>
</Layout>

<script>
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const successMsg = document.getElementById('form-success');
    const errorMsg = document.getElementById('form-error');

    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Simulierter Versand (hier API-Call einfügen)
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);
            
            try {
                // Simulation einer Netzwerkanfrage
                console.log('Formular Daten:', data);
                
                // Button Status ändern
                const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
                const originalText = btn.innerText;
                btn.disabled = true;
                btn.innerText = 'Wird gesendet...';

                await new Promise(resolve => setTimeout(resolve, 1000)); // Fake Delay

                // Erfolg anzeigen
                if(successMsg) successMsg.classList.remove('hidden');
                if(errorMsg) errorMsg.classList.add('hidden');
                form.reset();
                
                btn.innerText = originalText;
                btn.disabled = false;

                // Nach 5 Sekunden Erfolgsmeldung ausblenden
                setTimeout(() => {
                    successMsg?.classList.add('hidden');
                }, 5000);

            } catch (error) {
                console.error(error);
                if(errorMsg) errorMsg.classList.remove('hidden');
                if(successMsg) successMsg.classList.add('hidden');
            }
        });
    }
</script>