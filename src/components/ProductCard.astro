---
interface Props {
	name: string;
	price: string;
	description: string;
}

const { name, price, description } = Astro.props;
---

<article class="border border-gray-200 rounded-lg p-6 shadow-sm flex flex-col">
	<div class="w-full h-48 bg-gray-100 rounded-md mb-4 flex items-center justify-center">
		<span class="text-gray-400">Produktbild {name}</span>
	</div>
	<h3 class="text-xl font-bold mb-2">{name}</h3>
	<p class="text-gray-600 mb-4 flex-grow">{description}</p>
	<div class="flex justify-between items-center mt-auto">
		<span class="text-lg font-semibold" aria-label={`Preis: ${price} Euro`}>{price} â‚¬</span>
		<button 
			class="bg-tealinger-base hover:bg-tealinger-dark text-white font-bold py-2 px-4 rounded-md focus:ring-4 focus:ring-green-300 transition-colors"
			aria-label={`${name} in den Warenkorb legen`}
		>
			In den Warenkorb
		</button>
	</div>
</article>